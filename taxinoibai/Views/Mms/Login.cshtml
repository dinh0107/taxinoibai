@model taxinoibai.ViewModel.AdminLoginModel
@{ Layout = null; }
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/Content/all.css" rel="stylesheet" />
    <link href="~/Content/login.css" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
</head>
<body>
    <div class="bg-login">
        <div class="limiter">
            <div class="form-title">
                <h2>Đăng nhập</h2>
            </div>
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(true)
                @Html.AntiForgeryToken()

                <div class="user-box">
                    <div class="wrap-input">
                        @Html.LabelFor(a => a.Username)
                        @Html.TextBoxFor(a => a.Username)
                        <span class="focus-input username"></span>
                    </div>
                    @Html.ValidationMessageFor(a => a.Username)
                </div>
                <div class="user-box">
                    <div class="wrap-input">
                        @Html.LabelFor(a => a.Password)
                        @Html.PasswordFor(a => a.Password, new { @id = "password-field" })
                        <span class="focus-input password"></span>
                        <span toggle="#password-field" class="toggle-password">
                            <i class="fa-solid fa-eye"></i>
                            <i class="fa-sharp fa-solid fa-eye-slash"></i>
                        </span>
                    </div>
                    @Html.ValidationMessageFor(a => a.Password)
                </div>
                <div class="wrap-form-btn">
                    <div class="bg-btn"></div>
                    <button type="submit">Đăng nhập</button>
                </div>
            }
        </div>
    </div>
    <script src="~/Scripts/jquery-3.7.1.js"></script>
    <script>
        $(".toggle-password").click(function () {
            $(this).toggleClass("show");
            var input = $($(this).attr("toggle"));
            if (input.attr("type") == "password") {
                input.attr("type", "text");
            } else {
                input.attr("type", "password");
            }
        });
    </script>
</body>
</html>