@model taxinoibai.ViewModel.ChangePasswordModel
@{
    ViewBag.Title = "Đổi mật khẩu";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="page-header">
    <div class="page-title">
        <i class="fa-solid fa-align-right fa-rotate-180 fa-sm"></i>
        <span>Thay đổi mật khẩu</span>
    </div>
    <a href="#" onclick="history.go(-1)" class="btn-main btn-labeled bg-brown">
        <span class="icon">
            <i class="fa-solid fa-left"></i>
        </span>
        Quay lại
    </a>
</div>
<div class="content">
    @if (ViewBag.Result == 1)
    {
        <div id="AlertBox" class="alert alert-success"><strong>Đổi mật khẩu thành công</strong></div>
    }
    <div class="accordion">
        <div class="accordion-item border-left-slate">
            <div class="accordion-header">
                <div class="card-title">
                    <i class="fa-light fa-pen-to-square fa-lg"></i>
                    Thay đổi mật khẩu
                </div>
                <button type="button" data-bs-toggle="collapse" data-bs-target="#editForm" aria-expanded="true">
                    <i class="fa-solid fa-angle-down"></i>
                </button>
            </div>
            <div id="editForm" class="accordion-collapse collapse show">
                <div class="accordion-body">
                    @using (Html.BeginForm("ChangePassword", "Mms", FormMethod.Post, new { @id = "data-insert-form" }))
                    {
                        @Html.ValidationSummary(true)
                        <div class="mb-3 row">
                            <label class="col-form-label col-lg-3" for="OldPassword">Mật khẩu hiện tại <span class="text-danger">*</span></label>
                            <div class="col-lg-9">
                                @Html.PasswordFor(a => a.OldPassword, new { @class = "form_control" })
                                @Html.ValidationMessageFor(a => a.OldPassword)
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label class="col-form-label col-lg-3" for="Password">Mật khẩu mới <span class="text-danger">*</span></label>
                            <div class="col-lg-9">
                                @Html.PasswordFor(a => a.Password, new { @class = "form_control" })
                                @Html.ValidationMessageFor(a => a.Password)
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label class="col-form-label col-lg-3" for="ConfirmPassword">Nhập lại mật khẩu</label>
                            <div class="col-lg-9">
                                @Html.PasswordFor(a => a.ConfirmPassword, new { @class = "form_control w300" })
                                @Html.ValidationMessageFor(a => a.ConfirmPassword)
                            </div>
                        </div>
                        <div class="btn-group">
                            <button type="reset" onclick="resetAnyFormById('data-insert-form');" class="btn-main btn-white" id="reset">
                                <span>Đặt lại</span>
                                <i class="fa-solid fa-rotate-right ms-2"></i>
                            </button>
                            <button type="submit" class="btn-main btn-primary text-white ms-3">
                                <span>Lưu</span>
                                <i class="fa-solid fa-floppy-disk ms-2"></i>
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>