@using taxinoibai.Models
@{
    var config = (ConfigSite)HttpContext.Current.Application["ConfigSite"];
    ViewBag.Title = "Liên hệ";
}
<section class="page-section ">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="contact-info">
                    <ul class="ul-reset mt-4">
                        <li>
                            <b>Địa chỉ: </b>
                            @config.Place
                        </li>
                        <li>
                            <b>Hotline: </b>
                            <a href="tel:@config.Hotline">@config.Hotline</a>
                        </li>
                        <li>
                            <b>Email: </b>
                            <a href="mailto:@config.Email">@config.Email</a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="map">@Html.Raw(config.GoogleMap)</div>
            </div>
        </div>
    </div>
</section>